---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
import SocialPills from "../components/SocialPills.astro";
import MailSendIcon from "../components/icons/MailSendIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
---

<Layout
  title="Portolio de Confedev - Desarrollador y Programador Web"
  description="Contratame por favors"
>
  <main>
    <SectionContainer class="py-44 pb-24">
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey, soy Confedev <a
          class="flex justify-center items-center"
          href="https:linkedin.com"
          target="_blank"
          rel="noopener"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span> x a√±os de experiencia</span>.
        <span class="text-yellow-200/90">Desarrollador Web</span>
        <span class="text-red-200/90">De Chile</span>
        <span class="opacity-75">especializado en crear aplicacions</span>
      </h2>
      <nav class="flex gap-x-4 mt-8">
        <SocialPills href="https://www.linkedin.com">
          <LinkedinIcon class="size-6" /> Linkedin
        </SocialPills>
        <SocialPills href="https://www.github.com">
          <GithubIcon class="size-6" /> github
        </SocialPills>
        <SocialPills href="">
          <MailSendIcon class="size-6" /> confedev@gmail.com
        </SocialPills>
      </nav>
    </SectionContainer>

    <SectionContainer>
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
